{
  "name": "eventify-api",
  "version": "1.0.0",
  "description": "Eventify API is a RESTful API for managing events, tickets, users, and more. This API allows you to create, update, delete, and retrieve information about events, users, tickets, messages, analytics, attendees, and virtual events.",
  "main": "src/app.js",
  "scripts": {
    "start": "NODE_ENV=production && node src/app.js",
    "dev": "NODE_ENV=development && node --watch src/app.js",
    "test": "NODE_ENV=test && jest",
    "build": "prisma generate && prisma migrate deploy",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LazyEllis/eventify-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LazyEllis/eventify-api/issues"
  },
  "homepage": "https://github.com/LazyEllis/eventify-api#readme",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "@sendgrid/mail": "^8.1.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "paystack-api": "^2.0.6",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "3.5.0",
    "prisma": "^6.3.1",
    "supertest": "^7.0.0"
  }
}
